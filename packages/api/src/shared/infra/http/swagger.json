            ]
          },
          "description": {
            "type": "string"
          },
          "institution_id": {
            "type": "string"
          },
          "healths": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/AnimalHealth"
            }
          },
          "personalities": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/AnimalPersonality"
            }
          },
          "stage_of_life": {
            "type": "object",
            "$ref": "#/components/schemas/StageOfLife"
          },
          "specie": {
            "type": "object",
            "$ref": "#/components/schemas/Specie"
          }
        }
      },
      "AnimalHealth": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "AnimalPersonality": {
