          }
        }
      },
      "Specie": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "Animal": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "available": {
            "type": "boolean"
          },
          "name": {
            "type": "string"
          },
          "genre": {
            "type": "string",
