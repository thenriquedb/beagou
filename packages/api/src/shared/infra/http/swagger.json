    "/institutions": {
      "get": {
        "description": "List all institutions",
        "summary": "List all institutions",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": [
          "Institution"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "zip_code",
            "description": "Filter institutions by filter. Format: 99999999",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
