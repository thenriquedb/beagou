    "/institutions/{institution_id}": {
      "get": {
        "description": "Get infos from specific Institution",
        "summary": "Get infos from specific Institution",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": [
          "Institution"
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/institution_id"
